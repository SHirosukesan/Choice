<div class="containeshwor">
    <div class="row">
		<div class="col-md-6 col-md-offset-3">
            <h1>ユーザー詳細ページ</h1>
			<%= attachment_image_tag @user, :image, format: 'jpeg', size: "300x200", fallback: "no_image.jpg" %>
			<h3>名前<%= @user.name %></h3>
			<h3>メール<%= @user.email %></h3>
			<h3>住所</h3>
			<!-- userのコンテントがわからなくなってきている。 -->
			<button type="button" class="btn btn-success js-evernote-checked" data-evernote-id="3896">
				<li><%= link_to 'USER_EDIT', edit_public_user_path(current_user.id) %></li>
			</button>
			<br>
			<br>
			<hr>
			<h2>ユーザーお店投稿一覧</h2>
			<% @user.shops.each do |shop| %>
				<%= link_to  public_shop_path(shop.id) do %>
				  <%= attachment_image_tag shop, :image, format: 'jpeg', size: "300x200", fallback: "no_image.jpg" %>
			  	  投稿コメント<%= shop.content %>
			  	<%end%>
			  <hr>
			<% end %>


			<h1>宗教</h1>
			<h1>アレルギー</h1>
			<h1>嫌いな食べ物</h1>
			<h1>好きな食べ物</h1>
			<h1>食の好み</h1></div>
		</div>
    </div>
</div>