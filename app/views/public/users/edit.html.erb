<h1><%=@user.email%> showページの稿画面</h1>
<%= form_with(model: @user, url:public_user_path(@user), local: true) do |f| %>
	<label for="inputEmail3" class="col-sm-2 col-form-label">
	ユーザー写真
	<%= attachment_image_tag @user, :image, format: 'jpeg', size: "300x200", fallback: "no_image.jpg" %>
    </label>
	<div class="col-sm-10">
	<%= f.attachment_field :image, placeholder: "画像", class: "" %>
    </div>
    <label for="inputEmail3" class="col-sm-2 col-form-label">
    名前
    <%= @user.name %>
    </label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
    <label for="inputEmail3" class="col-sm-2 col-form-label">
    メール
    <%= @user.email %>
    </label>
    <div class="col-sm-10">
    <%= f.text_field :email%>
    </div>
     <label for="inputEmail3" class="col-sm-2 col-form-label">
    住所
    </label>
    <div class="col-sm-10">
    <%= f.text_field :email%>
    </div>
    <label for="inputEmail3" class="col-sm-2 col-form-label">説明文(200文字まで)</label>
    <div class="col-sm-10">
    <%= f.text_area :content %>
    </div>
    <div class="form-group row">
	      <div class="col-sm-10 offset-sm-2">
	          <button type="submit" class="btn btn-primary">更新</button>
	      </div>
	</div>
<% end %>

