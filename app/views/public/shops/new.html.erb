<h2>新規作成ページ</h2>
	<!-- コメントの投稿 、urlがわかりにくかったようだったので指定し直す -->
<%= form_for @shop,:url => {:action => :index} do |f| %>
	  <div class="form-group row">
	  	  <label for="inputEmail3" class="col-sm-2 col-form-label">店の画像</label>
	      <div class="col-sm-10">
	        <%= f.attachment_field :image, placeholder: "画像", class: "" %>
	      </div>
	      <label for="inputEmail3" class="col-sm-2 col-form-label">店名</label>
	      <div class="col-sm-10">
	        <%= f.text_field :name %>
	      </div>
	       <label for="inputEmail3" class="col-sm-2 col-form-label">食べ物の種類</label>
	      <div class="col-sm-10">
	        <%= f.text_field :food %>
	      </div>
	       <label for="inputEmail3" class="col-sm-2 col-form-label">説明文(200文字まで)</label>
	      <div class="col-sm-10">
	        <%= f.text_area :content %>
	      </div>
	  </div>
	  <div class="form-group row">
	      <div class="col-sm-10 offset-sm-2">
	          <button type="submit" class="btn btn-primary">投稿する</button>
	      </div>
	  </div>
<% end %>
<!-- api--------------- -->
<h2>api投稿ページ</h2>
<%= form_with(model: @article, url:public_user_articles_path(current_user), local:true) do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :latitude %>
        <%= f.text_field :latitude %>
      </div>

      <div class="field">
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>
